{# src/Arii/JOCBundle/Resources/views/index.html.twig #}
{% extends "AriiJOEBundle::layout.html.twig" %}
{% block body %}
<!--[if !IE]>start section<![endif]-->	
<script>
// var Cat =  new Array([1,2,3]);

dhtmlxEvent(window,"load",function(){     

    globalLayout = new dhtmlXLayoutObject(document.body, "2U");


    var cellA       = globalLayout.cells("a");    
    var cellALayout = cellA.attachLayout('2E');
    var cellATop    = cellALayout.cells("a");
    var cellABottom = cellALayout.cells("b");


    // Left top.
    cellATop.hideHeader();
    cellATop.setWidth(420);


    globalMenu = cellATop.attachMenu();
    globalMenu.setIconsPath( "{{ asset('/bundles/ariicore/images/menu/') }}" );
    globalMenu.loadStruct("{{ url('xml_menu') }}?route={{ app.request.attributes.get('_route') }}");

    myRibbon = cellATop.attachRibbon(); 
    myRibbon.setIconPath( "{{ asset('bundles/ariicore/images/ribbon/') }}" );
    myRibbon.loadStruct("{{ url('json_JOE_ribbon') }}");
    myRibbon.attachEvent("onStateChange", StateRibbon );
    myRibbon.attachEvent("onClick", ClickRibbon );

    var myMenu = cellATop.attachList({
        type:{
            template:'#Scheduler#',
            template_edit:'<input class=\'dhx_item_editor\' bind=\'obj.Package\'>'
        }
    });

    cellATop.progressOn();
    myMenu.load( "{{ url('xml_JOE_list') }}", function() {
        cellATop.progressOff();
    });


    // Left bottom.
    cellABottom.hideHeader();

    var myTree = cellABottom.attachTree();
    myTree.setImagePath( "{{ asset('bundles/ariicore/images/tree/') }}");
    
    cellABottom.progressOn();
    myTree.load( "{{ url('xml_JOE_tree') }}", function() {
        cellABottom.progressOff();
    });

    
    var cellB = globalLayout.cells("b");

    cellB.hideHeader();

    dhxTabbar = cellB.attachTabbar();
    // dhxTabbar.setImagePath("{{ asset("arii/dhtmlx/dhtmlxTabbar/codebase/imgs/") }}");
    dhxTabbar.addTab("a1", "{{ "Edit" | trans }}", 120);
    dhxTabbar.addTab("a2", "{{ "Export" | trans }}", 120);
    dhxTabbar.tabs("a1").setActive();

    // myTree.attachEvent( "onRowDblClicked", function(id) {
    //     if (this.getUserData(id,"type") === "file") {
    //         dhxTabbar.cells("a2").attachURL( "{{ url('arii_JOE_file_view') }}?id="+id.substr(1) );
    //     }
    //     else if (this.getUserData(id,"type") === "version") {
    //         dhxTabbar.cells("a2").attachURL( "{{ url('arii_JOE_file_view') }}?id="+id );
    //     }
    // });
});
</script>
{% endblock %}
